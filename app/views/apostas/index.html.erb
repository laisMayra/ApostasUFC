<p id="notice"><%= notice %></p>

<h1>Apostas</h1>

<table>
  <thead>
    <tr>
      <th>Tipoaposta</th>
      <th>Luta</th>
      <th>Jogador</th>
      <th>Resultado</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apostas.each do |aposta| %>
      <tr>
        <td><%= aposta.tipoAposta.descricao if aposta.tipoAposta %></td>
        <td><%= aposta.luta.data if aposta.luta %></td>
        <td><%= aposta.jogador.nome if aposta.jogador %></td>
        <td><%= aposta.resultado %></td>
        <td><%= aposta.valor %></td>
        <td><%= link_to 'Ver', aposta %></td>
        <td><%= button_to 'Editar', edit_aposta_path(aposta), :method => :get  %></td>
       <td><%= button_to "Excluir", aposta, :method=>:delete, :class=>:destroy, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Aposta', new_aposta_path %>
